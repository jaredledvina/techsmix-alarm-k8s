package() {
	install -Dm755 $srcdir/kubernetes/node/bin/kubeadm $pkgdir/bin/kubeadm
	install -Dm644 /etc/systemd/system/kubelet.service.d/10-kubeadm.conf
	install -Dm644 /usr/lib/modules-load.d/kubeadm.conf
	install -Dm644 /etc/sysctl.d/50-kubeadm.conf
}
